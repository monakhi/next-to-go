{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,

    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": ["vite.config.ts", "vitest.config.ts", "scripts/**/*.ts"]
}
